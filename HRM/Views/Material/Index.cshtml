
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
@section Scripts{
    <script src="~/App_Script/Material.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var material = new Material();
            material.init();
        });
    </script>
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Tìm kiếm
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-offset-3 col-lg-offset-3 col-md-6 col-lg-6">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label for="txtCode" class="col-md-4 control-label">Từ ngày</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" id="txtFrom">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtCode" class="col-md-4 control-label">Đến ngày</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" id="txtTo">
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="txtCode" class="col-md-4 control-label">Mã kho</label>
                                <div class="col-md-4">
                                    <input type="text" class="form-control" id="txtCode">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-4 col-md-4">
                                    <input type="button" id="search" class="btn btn-primary" value="Tìm">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
</div>
<div class="table-responsive">
    <table id="material" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên vật tư</th>
                <th>Số lượng</th>
                <th>Tiền</th>
                <th>tien_nt</th>
                <th>sl_hop</th>
                <th>ma_td1</th>
                <th>sl_td1</th>
                <th>packs</th>
                <th>tlc</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

