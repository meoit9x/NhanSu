@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

@section Scripts{
    <script src="~/App_Script/Department.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var department = new Department();
            department.init();
        });
    </script>
}

<input type="button" id="addDepartment" class="btn btn-primary" value="Thêm mới">
<input type="button" id="deleteMultiDepartment" class="btn btn-danger" value="Xóa">
<div class="table-responsive">
    <table id="department" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Mã bộ phận</th>
                <th>Tên bộ phân</th>
                <th>Bộ phận sản xuất</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade bs-example-modal-lg" id="departmentModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title" id="title">Bộ phận</h4>
            </div>
            <div class="modal-body" style="padding:10px">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="txtCode" class="col-md-4 control-label">Mã bộ phận</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" id="txtCode">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtName" class="col-md-4 control-label">Tên bộ phận</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" id="txtName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtSanXuat" class="col-md-4 control-label">Sản xuất</label>
                        <div class="checkbox col-md-4">
                            <label>
                                <input type="checkbox" id="cbSanXuat">
                            </label>
                        </div>
                            
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="hidden" id="hdId" />
                <button type="button" class="btn btn-default" data-dismiss="modal">Thoát</button>
                <button type="button" id="deleteDepartment" class="btn btn-danger">Xóa</button>
                <button type="button" id="saveDepartment" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>
