@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

@section Scripts{
    <script src="~/App_Script/Position.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var position = new Position();
            position.init();
        });
    </script>
}

<input type="button" id="addPosition" class="btn btn-primary" value="Thêm mới">
<input type="button" id="deleteMultiPosition" class="btn btn-danger" value="Xóa">

<div class="table-responsive">
    <table id="position" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Mã chức vụ</th>
                <th>Chức vụ</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade bs-example-modal-lg" id="positionModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title" id="title">Chức vụ</h4>
            </div>
            <div class="modal-body" style="padding:10px" id="modalCustomer">
                <div class="form-group">
                    <label for="txtCode" class="control-label">Mã chức vụ</label>
                    <input type="text" class="form-control" id="txtCode">
                </div>
                <div class="form-group">
                    <label for="txtName" class="control-label">Chức vụ</label>
                    <input type="text" class="form-control" id="txtName">
                </div>
            </div>
            <div class="modal-footer">
                <input type="hidden" id="hdId" />
                <button type="button" class="btn btn-default" data-dismiss="modal">Thoát</button>
                <button type="button" id="deletePosition" class="btn btn-danger">Xóa</button>
                <button type="button" id="savePosition" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>
