@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
@section Scripts{
    <script src="~/App_Script/OtherJobs.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var otherJob = new OtherJobs();
            otherJob.init();

        });
      
                        function myFunction() {
                            if ($('#sel1 option:selected').val() == "nhap") {

                                    $("#nhapSL").html("");
                                    var lblSoLuong = $("<label class='col-md-4 control-label'>Số lượng:</label>");
                                    var nhapSL = $("<div class='col-md-4'></div>");
                                    nhapSL.append("<input type='text' class='form-control txtSoLuong'  id='soLuong'>");

                                    $("#nhapSL").html(lblSoLuong);
                                    $("#nhapSL").append(nhapSL);
                                    }
                        }

    </script>
}
<input type="button" id="addOtherJobs" class="btn btn-primary" value="Thêm mới">
@*<input type="button" id="deleteMultiSpecification" class="btn btn-danger" value="Xóa">*@
<div class="table-responsive">
    <table id="otherJobs" class="table table-striped table-bordered table-hover" style="width:100%!important">
        <thead>
            <tr>
                <th>#</th>
                <th>Tên công việc</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Hệ số</th>
                <th>Thành tiền</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
<div class="modal fade bs-example-modal-lg" id="otherJobModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button id="closeDialog" type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title" id="title">Công việc khác</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="txtCode" class="col-md-4 control-label">Tên công việc</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" id="txtCongViec"/>
                        </div>
                    </div>
                    <div class="form-group row" id="nhapSL">
                        
                    </div>
                    
                    <div class="form-group">
                        <label for="txtSanXuat" class="col-md-4 control-label">Đơn giá</label>
                        <div class="col-md-4">

                            <input type="text" class="form-control" id="txtDonGia"/>

                        </div>

                    </div>
                    <div class="form-group">
                        <label for="txtSanXuat" class="col-md-4 control-label">Hệ số</label>
                        <div class="col-md-4">

                            <input type="text" class="form-control" id="txtHeSo"/>

                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="hidden" id="hdId" />
                <button type="button" id="exitOtherJobs" class="btn btn-default" data-dismiss="modal">Thoát</button>
                <button type="button" id="deleteOtherJobs" class="btn btn-danger">Xóa</button>
                <button type="button" id="saveOtherJobs" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>


