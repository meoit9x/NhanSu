
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

@section Scripts{
    <script src="~/App_Script/OtherJobs.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var otherjobs = new OtherJobs();
            otherjobs.init();
        });
    </script>
}
<div class="modal fade bs-example-modal-lg" id="otherJobModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button id="closeDialog" type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title" id="title">Công việc khác</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="txtCode" class="col-md-4 control-label">Tên công việc</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row" id="nhapSL">
                        <label for="txtCode" class="col-md-4 control-label">Số lượng</label>
                        <select class="form-control col-md-4" id="sel1" style="width:initial;margin-left:15px;">
                            <option>Số lượng KG</option>
                            <option>Số lượng cái</option>
                            <option value="nhap" id="nhap">Nhập</option>
                            
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="txtSanXuat" class="col-md-4 control-label">Đơn giá</label>
                        <div class="col-md-4">
                            
                                <input type="text" class="form-control" />
                           
                        </div>

                    </div>
                    <div class="form-group">
                        <label for="txtSanXuat" class="col-md-4 control-label">Hệ số</label>
                        <div class="col-md-4">
                           
                                <input type="text" class="form-control" />
                          
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                
                <button type="button" id="saveDepartment" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>
<div class="table-responsive">
    <table id="otherJobs" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Hệ số</th>
                <th>Thành tiền</th>

            </tr>
        </thead>
        <tbody>
            <tr>
                <th>Tên công việc</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>

            </tr>
        </tbody>
    </table>
</div>

