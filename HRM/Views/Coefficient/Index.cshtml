﻿@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

@section Scripts{
    <script src="~/App_Script/Coefficient.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var coefficient = new Coefficient();
            coefficient.init();
        });
    </script>
}

<input type="button" id="addCoefficient" class="btn btn-primary" value="Thêm mới">
@*<input type="button" id="deleteMultiCoefficient" class="btn btn-danger" value="Xóa">*@

<div class="table-responsive">
    <table id="coefficient" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Tên hệ số</th>
                <th>Hệ số</th>
                <th>Bộ phận</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade bs-example-modal-lg" id="coefficientModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title" id="title">Hệ số</h4>
            </div>
            <div class="modal-body" style="padding:10px" id="modalCustomer">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="txtCode" class="col-md-4 control-label">Tên hệ số</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" id="txtName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtName" class="col-md-4 control-label">Bộ phận</label>
                        <div class="col-md-4">
                            <select id="txtDepartment" class="form-control"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtName" class="col-md-4 control-label">Hệ số</label>
                        <div class="col-md-4">
                            <input type="number" class="form-control" id="txtCoefficient">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <table id="detailCoefficient" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Từ</th>
                                        <th>Đến</th>
                                        <th>Quy cách</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="3" class="text-left">
                                            <input type="button" id="addDetail" class="btn btn-default" value="Thêm chi tiết" />
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="hidden" id="hdId" />
                <button type="button" class="btn btn-default" data-dismiss="modal">Thoát</button>
                <button type="button" id="deleteCoefficient" class="btn btn-danger">Xóa</button>
                <button type="button" id="saveCoefficient" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade bs-example-modal-md" id="detailModal" role="dialog">
    <div class="modal-dialog modal-md">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                <h4 class="modal-title" id="title">Chi tiết</h4>
            </div>
            <div class="modal-body" style="padding:10px" id="modalCustomer">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="txtName" class="col-md-4 control-label">Từ</label>
                        <div class="col-md-4">
                            <input type="number" class="form-control" id="txtFrom">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtName" class="col-md-4 control-label">Đến</label>
                        <div class="col-md-4">
                            <input type="number" class="form-control" id="txtTo">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="txtName" class="col-md-4 control-label">Quy cách</label>
                        <div class="col-md-4">
                            <select id="txtIdSpecification" class="form-control">
                            </select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="hidden" id="hdIdDetail" />
                <input type="hidden" id="hdIdSpecification" />
                <input type="hidden" id="hdRowIndex" />
                <button type="button" class="btn btn-default" data-dismiss="modal">Thoát</button>
                <button type="button" id="deleteDetail" class="btn btn-danger">Xóa</button>
                <button type="button" id="saveDetail" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>